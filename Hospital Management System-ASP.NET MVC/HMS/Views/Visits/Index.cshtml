

@model IEnumerable<HMS.Models.Visit>

@{
    ViewBag.Title = "Visit";
}

<h2>Check Your Visit</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dateOfVisit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.complaint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient2.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dateOfVisit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.complaint)
        </td>
        <td>
            @Html.ActionLink(item.Doctor.Name,"Details","Doctors",new { item.Id },null)
        </td>
        <td>
            @Html.ActionLink(item.Patient2.Name,"Details","Patient2",new {item.Id },null)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
